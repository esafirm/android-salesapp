<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="FormTextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/view_padding</item>
    <item name="android:layout_marginRight">@dimen/view_padding_horizontal</item>
    <item name="android:layout_marginLeft">@dimen/view_padding_horizontal</item>
  </style>

  <style name="FormEditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">@dimen/view_padding_horizontal</item>
    <item name="android:layout_marginLeft">@dimen/view_padding_horizontal</item>
  </style>

  <style name="SectionLabel">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_margin">@dimen/view_padding_horizontal</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
    <item name="android:textColor">?colorPrimary</item>
    <item name="android:textStyle">bold</item>
  </style>

</resources>
